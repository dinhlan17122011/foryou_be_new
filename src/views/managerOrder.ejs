<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Quản lý đơn hàng</h1>
<table>
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Khách hàng</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order._id %></td>
                <td><%= order.customerName %></td>
                <td><%= order.totalAmount %></td>
                <td><%= order.status %></td>
                <td>
                    <a href="/managerOrders/view/<%= order._id %>">Xem chi tiết</a>
                    <form action="/managerOrders/updateStatus/<%= order._id %>" method="POST" style="display:inline;">
                        <button type="submit">Cập nhật trạng thái</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>