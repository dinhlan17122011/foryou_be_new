<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        button {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #c82333;
        }
        .container {
            text-align: center;
        }
        .add-category-btn {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 16px;
            margin-top: 20px;
            display: inline-block;
        }
        .add-category-btn:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>Manage Categories</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
            <tr>
                <td><%= category.name %></td>
                <td>
                    <!-- Truyền đúng ID vào hàm deleteCategory -->
                    <button class="btn btn-danger" onclick="deleteCategory('<%= category._id %>')">Delete</button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    
    
    <script>
        function deleteCategory(id) {
    console.log('Category ID to delete:', id); // Log để kiểm tra ID

    if (confirm("Are you sure you want to delete this category?")) {
        fetch(`/category/delete/${id}`, { // Chèn ID vào URL
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                alert(data.message || 'Category deleted successfully');
                location.reload();
            })
            .catch(error => {
                console.error('Error deleting category:', error);
                alert('Error deleting category. Please try again.');
            });
    }
}

    </script>
    
    
    
</body>
</html>
