<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Cake</title>
</head>
<body>
    <%- include('./navbar') %>
    <h1>Update Cake</h1>
    <form action="/cake/update/<%= cake._id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= cake.name %>" required><br><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= cake.price %>" required><br><br>

        <label for="description">Description:</label>
        <textarea id="description" name="describe" rows="4" required><%= cake.describe %></textarea><br><br>

        <label for="category">Category:</label>
        <input type="text" id="category" name="category" value="<%= cake.category %>"><br><br>

        <label for="size">Size:</label>
        <div id="size-container">
            <% cake.size.forEach(function(item, index) { %>
                <div class="size-entry">
                    <input type="text" name="size_image" placeholder="Image URL" value="<%= item.image %>">
                    <input type="number" name="size_price" placeholder="Price" value="<%= item.price %>">
                    <input type="text" name="size_size" placeholder="Size" value="<%= item.size %>">
                </div>
            <% }) %>
        </div>
        <button type="button" onclick="addSize()">Add More Sizes</button><br><br>

        <label for="code">Code:</label>
        <input type="text" id="code" name="code" value="<%= cake.code %>"><br><br>

        <button type="submit">Update Cake</button>
    </form>
    
    <a href="/cakes">Back to Cakes List</a>

    <script>
        function addSize() {
            const sizeContainer = document.getElementById('size-container');
            const newSizeEntry = document.createElement('div');
            newSizeEntry.classList.add('size-entry');
            newSizeEntry.innerHTML = `
                <input type="text" name="size_image" placeholder="Image URL">
                <input type="number" name="size_price" placeholder="Price">
                <input type="text" name="size_size" placeholder="Size">
            `;
            sizeContainer.appendChild(newSizeEntry);
        }
    </script>
</body>
</html>
